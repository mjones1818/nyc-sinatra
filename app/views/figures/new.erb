<h2>Create New Figure</h2>

<!-- add content here -->
<form action="/figures" method="post">
  <label for="text">Figure name: </label>
  <input type="text" name="figure[name]" id="figure_name">
  
  <ul>
  <h3>Titles</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %><br> 
  <% end %>
  </ul>
  <h3>Create new title:</h3>
  <input type="text" name="title[name]" id="new_title"><br>

  <h3>Landmarks</h3>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %><br> 
  <% end %>

  <h3>Create new Landmark:</h3>
  Name: <input type="text" name="landmark[name]" id="new_landmark"> Year: <input type="number" name="landmark[year_completed]" id=""><br>
  <button type="submit">Create New Figure</button>
</form>
<a class="button" href="/landmarks">Landmarks</a>
